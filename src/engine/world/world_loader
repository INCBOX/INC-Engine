#include <fstream>
#include <iostream>
#include <nlohmann/json.hpp>
#include "filesystem_stdio.h"
#include "world/world_render.h"
#include "prop_static.h"
#include "imt_material.h"

using json = nlohmann::json;
extern MaterialManager g_MaterialManager;

bool World_LoadFromJSON(const std::string& mapName) {
    std::string rel = "maps/" + mapName + ".json";
    std::string full = FS_ResolvePath(rel);
    if (full.empty()) {
        std::cerr << "[WorldLoader] Map not found: " << rel << "\n";
        return false;
    }

    std::ifstream file(full);
    if (!file.is_open()) {
        std::cerr << "[WorldLoader] Failed to open map file: " << full << "\n";
        return false;
    }

    json data;
    try {
        file >> data;
    } catch (const std::exception& e) {
        std::cerr << "[WorldLoader] JSON parse error: " << e.what() << "\n";
        return false;
    }

    if (!data.contains("entities")) return true;

    for (auto& ent : data["entities"]) {
        std::string classname = ent.value("classname", "");
        if (classname == "prop_static") {
            // Extract position (origin) from JSON
            auto origin = ent.value("origin", std::vector<float>{0.0f, 0.0f, 0.0f});
            if (origin.size() < 3) {
                std::cerr << "[WorldLoader] Invalid origin for prop_static\n";
                continue;
            }

            // Extract material name/path
            std::string mat = ent.value("material", "materials/default.mat");

            // Extract model path
            std::string model = ent.value("model", "models/testcube.imdl");

            PropStatic prop;

            // Initialize model for prop (you must implement LoadIMDL to fill this)
            LoadIMDL(model, prop.model);

            // Assign position and material
            prop.position = Vec3(origin[0], origin[1], origin[2]);
            prop.materialPath = mat;

            // Load the material
            g_MaterialManager.Load(mat);

            // Add to world
            World_AddStaticProp(prop);
        }
    }

    std::cout << "[WorldLoader] Map loaded: " << mapName << "\n";
    return true;
}
